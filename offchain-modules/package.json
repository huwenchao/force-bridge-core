{
  "name": "force-bridge",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "ts-node ./src/apps/relayer/index.ts",
    "demo": "ts-node-dev scripts/demo.ts",
    "build": "tsc",
    "test": "ava",
    "lint:eslint": "eslint --format=pretty -c .eslintrc.js src/**/*.ts",
    "lint:tslint": "tslint --project .",
    "lint": "run-p check:prettier build",
    "pre-commit": "run-s lint",
    "fix": "run-p fix:prettier",
    "fix:prettier": "prettier --write .",
    "fix:tslint": "tslint --project . --fix",
    "watch:start": "ts-node-dev --respawn --transpile-only ./src/apps/relayer/index.ts",
    "watch:ava": "ava --watch",
    "watch:build": "tsc -w",
    "check:prettier": "prettier -c .",
    "clean": "rimraf lumos_db dist force-bridge.sqlite",
    "eth-test": "ts-node ./src/scripts/integration-test/eth.ts",
    "xchain-test": "run-s eth-test",
    "integration-test": "run-p -r start xchain-test",
    "ci": "run-s clean build deploy integration-test",
    "sync-eth-abi": "cd ../eth-contracts && npx hardhat compile && cp artifacts/contracts/ForceBridge.sol/ForceBridge.json ../offchain-modules/src/packages/xchain/eth/abi",
    "deploy": "ts-node-dev ./src/scripts/deploy_ckb.ts"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nervosnetwork/ckb-types": "^0.39.0",
    "@types/jest": "^26.0.19",
    "@types/log4js": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "ava": "^3.15.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.21.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "pm2": "^4.5.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@ckb-lumos/base": "^0.16.0",
    "@ckb-lumos/indexer": "^0.16.0",
    "@ckb-lumos/rpc": "^0.16.0",
    "@lay2/pw-core": "^0.3.22",
    "@nervosnetwork/ckb-sdk-core": "^0.39.0",
    "@types/node": "^14.14.31",
    "axios": "^0.21.1",
    "ckb-js-toolkit": "^0.10.2",
    "dotenv": "^8.2.0",
    "ethers": "^5.0.32",
    "lodash": "^4.17.20",
    "log4js": "^6.3.0",
    "module-alias": "^2.2.2",
    "mysql2": "^2.2.5",
    "nconf": "^0.11.2",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.31",
    "typeorm-naming-strategies": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  },
  "ava": {
    "files": [
      "src/**/test/**/*.ts",
      "src/**/*.spec.ts",
      "!src/**/helper.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "_moduleAliases": {
    "@force-bridge": "dist/src/packages"
  }
}
